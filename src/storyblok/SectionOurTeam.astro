---
import { storyblokEditable } from "@storyblok/astro";
import { Image } from "astro:assets";
import TextWithButton from "../components/TextWithButton.astro";
import type { TextsWithButtonStoryblok } from "@base/component-types-sb";

const { blok } = Astro.props;
let textWithButton: TextsWithButtonStoryblok[] = blok.textsWithButton[0];

---

<section {...storyblokEditable(blok)} class="container flex flex-col gap-16 items-center my-[75px]">
    <div class="items-center flex gap-12">
        <Image
        src={blok.bannerImage.filename}
        alt={blok.bannerImage.alt}
        width="200"
        height="150"
        class=" w-[60%] h-auto ratio-1 object-cover rounded-[30px]"
        />
        <TextWithButton textWithButton={textWithButton} />
    </div>
    <div class="flex flex-col items-center w-[75%]">
        <h3 class="text-[30px] text-text-primary leading-tight text-center font-display">
            {blok.bTextHeadline}
        </h3>
        <p class="text-[21px] text-text-secondary text-center font-display">
            {blok.bTextParagraph}
        </p>
    </div>

</section>