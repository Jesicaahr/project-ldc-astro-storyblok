---
const { textWithButton } = Astro.props;

---

<div>
    {textWithButton.subheadline && 
        <h3 class="text-[30px] text-text-primary font-display">
            {textWithButton.subheadline}
        </h3>
    }
    {textWithButton.headline && 
        <h2 class="text-[50px] leading-tight mt-[10px] mb-[15px] text-text-primary font-bold font-sans">
            {textWithButton.headline}
        </h2>
    }
    {textWithButton.primaryText && 
       <p class="text-[21px] text-text-secondary font-display">
           {textWithButton.primaryText}
       </p>
    }
    {textWithButton.textButton && 
        <button class="rounded-[50px] mt-[40px] bg-primary text-white px-5 py-2 text-lg">
            {textWithButton.textButton}
        </button>
    }
</div>